{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h4 class="page-header">Hopitales liste</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    {#<div class="panel-heading">#}
                        {#DataTables Advanced Tables#}
                    {#</div>#}
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTablesHopitales">
                            <thead>
                            <tr>
                                <th>Nom hopitale</th>
                                <th>Tel hopitale</th>
                                <th>Heure d'ouverture</th>
                                <th>heure de fermeture</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for hopitale in hopitales %}
                                <tr>
                                    <td><a href="{{ path('hopitale_show', { 'id': hopitale.id }) }}">{{ hopitale.nomHopitale }}</a></td>
                                    <td>{{ hopitale.telHopitale }}</td>
                                    <td>{{ hopitale.hOuverture }}</td>
                                    <td>{{ hopitale.hFermeture }}</td>
                                    <td>
                                        {% if hopitale.user.enabled == 1 %}
                                        <a class="btn btn-outline btn-info"  href="{{ path('hopitale_deactiver', { 'id': hopitale.id }) }}">d√©sactiver</a>
                                        {% elseif hopitale.user.enabled == 0 %}
                                        <a class="btn btn-outline btn-warning"  href="{{ path('hopitale_activer', { 'id': hopitale.id }) }}">activer</a>
                                        {% endif %}
                                        <a class="btn btn-outline btn-danger"  href="{{ path('hopitale_delete', { 'id': hopitale.id }) }}">supp</a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>


    <script>

        $(document).ready(function(){
            $('#dataTablesHopitales').DataTable();
        });
    </script>

{% endblock %}
