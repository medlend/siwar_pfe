                                            <li>
                                                <a href="{{ path('hopitale_show', { 'id': hopitale.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('hopitale_edit', { 'id': hopitale.id }) }}">edit</a>
