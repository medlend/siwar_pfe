{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" style="margin-top: 10%">


        <div style="background-color: #eee">
            <div class="row ">
                <div class="col-lg-3" style="margin-left: 5%">
                <h2>Hopitale profile : </h2>
                </div>
            </div>
            <div class="row marketing">

                <div class="col-lg-4">
                    <div class="col-lg-4" style="background-image: url('{{ hopitale.image }}');background-size: contain;background-position: center;background-repeat: no-repeat;width: 100%;height: 100px">
                    </div>
                </div>

                <div class="col-lg-4">
            <label> <strong>Nom hopitale : </strong></label> {{ hopitale.nomHopitale }}
                </div>

                <div class="col-lg-4">
                    <label> <strong>Mail : </strong></label> {{ hopitale.mailHopitale }}
                </div>

                <div class="col-lg-4">
                    <label> <strong>Mobile: </strong></label> {{ hopitale.telHopitale }}
                </div>

                <div class="col-lg-4">
                    <label> <strong>Fax : </strong></label> {{ hopitale.faxHopitale }}
                </div>


                <div class="col-lg-4">
                    <label> <strong>Heure d'ouverture : </strong></label> {{ hopitale.hOuverture }}
                </div>


                <div class="col-lg-4">
                    <label> <strong>Heure de fermeture : </strong></label> {{ hopitale.hFermeture }}
                </div>

                <div class="col-lg-4">
                    <label> <strong>Adresse : </strong></label> {{ hopitale.adresse }}
                </div>
            </div>


            <div class="row  " style="margin-top: 5%;padding-bottom: 5%">
                <div class="col-lg-3 pull-right" style="margin-left: 5%">
                    <a class="btn btn-primary" href="{{ path('hopitale_edit', { 'id': hopitale.id }) }}">Edit</a>
                </div>
            </div>

        </div>


    </div> <!-- /container -->











{% endblock %}
