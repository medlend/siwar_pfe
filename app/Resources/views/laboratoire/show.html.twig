                <div class="col-lg-4">
                    <label> <strong>Mobile: </strong></label> {{ laboratoire.telLab }}
                </div>

                <div class="col-lg-4">
                    <label> <strong>Fax : </strong></label> {{ laboratoire.faxLab }}
