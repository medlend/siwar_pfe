{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h4 class="page-header">Medecins list</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTablesMedecins">
                            <thead>
                            <tr>
                                <th>Nom </th>
                                <th>Tel </th>
                                <th>Heure d'ouverture</th>
                                <th>heure de fermeture</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for medecin in medecins %}
                                <tr>
                                    <td><a href="{{ path('medecin_show', { 'id': medecin.id }) }}">{{ medecin.user.username}}</a></td>
                                    <td>{{ medecin.numTel }}</td>
                                    <td>{{ medecin.hOuverture }}</td>
                                    <td>{{ medecin.hFermeture }}</td>
                                    <td>
                                        {% if medecin.user.enabled == 1 %}
                                            <a class="btn btn-outline btn-info"  href="{{ path('medecin_deactiver', { 'id': medecin.id  }) }}">d√©sactiver</a>
                                        {% elseif medecin.user.enabled == 0 %}
                                            <a class="btn btn-outline btn-warning"  href="{{ path('medecin_activer', { 'id': medecin.id  }) }}">activer</a>
                                        {% endif %}
                                        <a class="btn btn-outline btn-danger"  href="{{ path('medecin_delete', { 'id': medecin.id  }) }}">supp</a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        {#<div class="row">#}

        {#<ul>#}
        {#<li>#}
        {#<a class="btn btn-primary btn-lg btn-block" href="{{ path('hopitale_new') }}">Create a new hopitale</a>#}
        {#</li>#}
        {#</ul>#}
        {#</div>#}
        <!-- /.row -->
        <!-- /.container-fluid -->
    </div>



    <script>

        $(document).ready(function(){
            $('#dataTablesMedecins').DataTable();
        });
    </script>
{% endblock %}
