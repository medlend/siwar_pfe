{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <h4 class="page-header">Specialites liste</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    {#<div class="panel-heading">#}
                    {#DataTables Advanced Tables#}
                    {#</div>#}
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTablesHopitales">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Texte</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for conseil in conseils %}
                                <tr>
                                    <td><a href="{{ path('conseil_show', { 'id': conseil.id }) }}">{{ conseil.title }}</a></td>
                                    <td>{{ conseil.texte }}</td>
                                    {#<td>{{ conseil.image }}</td>#}
                                    <td>                    <div style="background-image: url('{{ conseil.image }}');background-size: contain;background-position: center;background-repeat: no-repeat;width: 100%;height: 100px">
                                        </div>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline btn-danger"  href="{{ path('conseil_delete', { 'id': conseil.id  }) }}">supp</a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-md-2 pull-right"></div>
            <a href="{{ path('conseil_new') }}">Ajouter un conseil</a>
        </div>
        <!-- /.row -->

    </div>



    <script>

        $(document).ready(function(){
            $('#dataTablesHopitales').DataTable();
        });
    </script>

{% endblock %}