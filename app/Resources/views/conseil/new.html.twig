{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div id="page-wrapper">
        <div class="panel panel-primary" >
            <div class="panel-heading">
                <h3 class="panel-title">Registration Conseil</h3>
            </div>
            <div class="panel-body" >

                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="col-md-12 col-sm-12">
                    <div class="form-group col-md-6 col-sm-6">
                        {{ form_label(form.title, "Titre Conseil") }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control input-sm"'}}) }}
                    </div>

                    <div class="form-group col-md-6 col-sm-6">
                        {{ form_label(form.texte, "Text") }}
                        {{ form_widget(form.texte, {'attr': {'class': 'form-control input-sm"'}}) }}
                    </div>

                    <div class="form-group col-md-6 col-sm-6">
                        {{ form_label(form.image, "Image") }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control input-sm"'}}) }}
                    </div>

                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group  pull-right" >
                        <input type="submit" class="btn btn-primary" value="Submit"/>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

